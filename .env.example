# ============================================
# GuardQuote v2.0 — Environment Variables
# Copy to .env and fill in real values
# ⚠️  .env is gitignored — never commit it
# ============================================

# ── Database (PostgreSQL) ──────────────────
DB_HOST=localhost
DB_PORT=5432
DB_USER=guardquote
DB_PASSWORD=          # REQUIRED — app won't start without this
DB_NAME=guardquote
DATABASE_URL=postgresql://guardquote:PASSWORD@localhost:5432/guardquote

# ── JWT ────────────────────────────────────
JWT_SECRET=           # REQUIRED — min 32 chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ── OAuth — GitHub ─────────────────────────
GH_OAUTH_CLIENT_ID=Ov23liQIXikpzTsCZE8y
GH_OAUTH_CLIENT_SECRET=        # REQUIRED for OAuth
GH_OAUTH_CALLBACK_URL=https://guardquote.vandine.us/auth/github/callback

# ── OAuth — Google ─────────────────────────
GOOGLE_OAUTH_CLIENT_ID=366637807167-tbme92ojni8t2fson1k84594p39l93iv.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=    # REQUIRED for OAuth
GOOGLE_OAUTH_CALLBACK_URL=https://guardquote.vandine.us/auth/google/callback

# ── Redis ──────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=       # Warn if missing — rate limiting needs this

# ── ML Engine (S2S) ───────────────────────
ML_ENGINE_URL=http://localhost:8000
ML_ENGINE_SECRET=     # REQUIRED — service-to-service auth

# ── Grafana ────────────────────────────────
GRAFANA_URL=https://grafana.vandine.us
GRAFANA_USER=admin
GRAFANA_PASSWORD=     # Ask team lead

# ── Demo Mode (SDPS Showcase) ─────────────
# Set to "true" for demo mode with mock data
# No database or external services required
DEMO_MODE=false

# ── Logging ────────────────────────────────
NODE_ENV=development
LOG_LEVEL=info
