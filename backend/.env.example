# PostgreSQL Database (Bun.sql native driver)
# Local: postgres://localhost/guardquote
# Raspberry Pi: postgres://user:pass@pi.local:5432/guardquote
DATABASE_URL=postgres://localhost/guardquote

PORT=3000
JWT_SECRET=change-this-in-production

# Force demo mode for services page (no Pi required)
DEMO_MODE=true

# ML Engine (gRPC)
# Connect to ML engine for quote generation
# Falls back to local rule-based calculation if unavailable
ML_ENGINE_HOST=localhost
ML_ENGINE_PORT=50051
ML_ENGINE_TIMEOUT_MS=5000

# OAuth Providers (SSO)
# Get credentials from each provider's developer console
# Only configured providers will be available

# Microsoft (Entra ID / Azure AD)
# https://portal.azure.com > App registrations
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Google
# https://console.cloud.google.com > Credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub
# https://github.com/settings/developers > OAuth Apps
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Application Base URL (for OAuth redirects)
BASE_URL=http://localhost:3002
